{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "noEmit": true,

    "noFallthroughCasesInSwitch": true,

    // Enables interoperability between CommonJS and ES modules
    "esModuleInterop": true,

    // Allows default imports from modules with no default export
    "allowSyntheticDefaultImports": true,

    // Reports an error when unreachable code is detected
    "allowUnreachableCode": false,

    // Disallows unused labels
    "allowUnusedLabels": false,

    // Enables importing .json files
    "resolveJsonModule": true,

    // Removes comments from the emitted output
    "removeComments": true,

    // Prints the names of emitted files
    "listEmittedFiles": true,

    // Ensures that the compiler parses in strict mode and emits "use strict" for each source file
    "alwaysStrict": true,

    // Enables all strict type-checking options
    "strict": true,

    // Enables strict null checks
    "strictNullChecks": true,

    // Enables strict checking of function types
    "strictFunctionTypes": true,

    // Ensures non-undefined class properties are initialized in the constructor
    "strictPropertyInitialization": true,

    // Does not emit outputs if any errors were reported
    "noEmitOnError": true,

    // Does not truncate error messages
    "noErrorTruncation": true,

    // Reports an error when not all code paths return a value
    "noImplicitReturns": true,

    // Reports an error for any property access on an object with an index signature, even if the property exists
    "noUncheckedIndexedAccess": true,

    // Raises an error on expressions and declarations with an implied 'any' type
    "noImplicitAny": true,

    // Raises an error on 'this' expressions with an implied 'any' type
    "noImplicitThis": true,

    // Reports errors on unused locals
    "noUnusedLocals": true,

    // Requires that overriding members in derived classes are marked with an override modifier
    "noImplicitOverride": true,

    // Disallows accessing properties on an object through string literals
    "noPropertyAccessFromIndexSignature": true,

    // Reports errors on unused parameters
    "noUnusedParameters": true,

    // Enable source maps generation
    "sourceMap": false,

    // Inline source maps on .js files
    "inlineSourceMap": false,

    // Include original TS source code on source maps
    "inlineSources": false
  },
  "include": ["src", ".vitest"]
}
